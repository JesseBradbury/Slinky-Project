<div>
    <div id="map">
    </div>
    <div class="containter">
        <div class="spotDetails-form card">
            <div class="row">
                <h1 class="spotNameh1">{{ spot.spot_name }} - {{ spot.steps }} Steps </h1>
            </div>
            <div class="row">
                <p class="spot-location">{{ spot.city }}, {{ spot.state }}</p>
            </div>
            <div class="row">
                <p>Location Notes: {{ spot.location }}</p>
                <p>Description: {{ spot.description }}</p>
            </div>

        </div>
        <div class="card">
            <h2 class="wavesh2">WAVES</h2>
            {{#if spot.waves.length}}
            {{!-- <ul> --}}
                {{#each spot.waves}}
                <div class="waveDetail-p container">
                    {{!-- <li> --}}
                        <div class="row">
                            <div class="col col-lg-2">
                                <p>User: {{ User.user_name }}</p>
                            </div>
                            <div class="col">
                                <p>Steps: {{ steps }} - Time: {{ time }}</p>
                            </div>


                        </div>

                        <p>Comment: {{ comment }}</p>
                        {{!--
                    </li> --}}
                </div>
                {{/each}}
                {{!--
            </ul> --}}
            {{else}}
            <div class="noWave-p">
                <p>No waves yet! Record your own!</p>
            </div>
            {{/if}}
        </div>
        <div class="container card">
            <h3 class="addWaveh3">Add Your Wave!</h3>
            <form class="form wave-form">
                <div class="row">
                    <div class="col col-lg-3">
                        <div class="form-group">
                            <label for="wavesteps-create">Steps:</label>
                            <input class="form-input" type="integer" id="wavesteps-create">
                        </div>
                    </div>
                    <div class="col col-lg-3">
                        <div class="form-group">
                            <label for="wavetime-create">Time:</label>
                            <input class="form-input" type="text" id="wavetime-create">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="wavecomment-create">comment:</label>
                    <input class="form-input" type="text" id="wavecomment-create">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <script src="/js/createWave.js"></script>