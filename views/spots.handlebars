<div>
    <h1>Slinky Spots</h1>
    <div>
        <ul>
            {{#each spots}}
            <li>
                <a href="/spots/{{id}}">{{ spot_name }} - {{ steps }}</a>
                <p>{{ description }}</p>
            </li>
            {{/each}}
        </ul>
    </div>

    <div>
        <h2>Add a New Spot</h2>
        <form class="form spot-form">
            <div class="form-group">
                <label for="spotname-create">Spot Name:</label>
                <input class="form-input" type="text" id="spotname-create">
            </div>
            <div class="form-group">
                <label for="steps-create">Steps:</label>
                <input class="form-input" type="text" id="steps-create">
            </div>
            <div class="form-group">
                <label for="city-create">City:</label>
                <input class="form-input" type="text" id="city-create">
            </div>
            <div class="form-group">
                <label for="state-create">State:</label>
                <input class="form-input" type="text" id="state-create">
            </div>
            <div class="form-group">
                <label for="location-create">Location of stairs:</label>
                <input class="form-input" type="text" id="location-create">
            </div>
            <div class="form-group">
                <label for="description-create">Describe the spot:</label>
                <input class="form-input" type="text" id="description-create">
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </div>
</div>
<script src="/js/createSpot.js"></script>