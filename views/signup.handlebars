<div class="container card">
    <h2 class="signup-h2">Sign Up!</h2>
    <form class="form signup-form">
        <div class="signup-form-group">
            <label for="username-signup">Username:</label>
            <input class="signup-form-input" type="text" id="username-signup" />
        </div>
        <div class="signup-form-group">
            <label for="password-signup">Password:</label>
            <input class="signup-form-input" type="password" id="password-signup" />
        </div>
        <div class="signup-form-group">
            <label for="email-signup">Email:</label>
            <input class="signup-form-input" type="text" id="email-signup" />
        </div>
        <div class="signup-form-group">
            <button class="btn btn-primary" type="submit">Sign Up!</button>
        </div>
    </form>
    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
    <li><a href="/login">Already have an account? Log In!</a></li>
</div>
<script src="/js/signup.js"></script>