<h1>Search</h1>
<form action="/search" method="get">
    <label for="keyword">Keyword:</label>
    <input type="text" id="keyword" name="keyword" required>
    <button type="submit">Search</button>
</form>

{{#if results}}
<h2>Search Results</h2>
<ul>
    {{#each results}}
    <li>{{ this }}</li>
    {{/each}}
</ul>
{{/if}}